{
  "qualifiedName": "@lumile/mercadolibre-mcp",
  "displayName": "MercadoLibre MCP Server",
  "description": "Access MercadoLibre's API to search products, retrieve reviews, and check seller reputations.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/lumile.com.ar.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "seller_reputation",
      "description": "Obtiene la reputación de un vendedor",
      "inputSchema": {
        "type": "object",
        "properties": {
          "sellerId": {
            "type": "string",
            "description": "ID del vendedor"
          }
        }
      }
    },
    {
      "name": "product_reviews",
      "description": "Obtiene las reseñas de un producto",
      "inputSchema": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "ID del producto"
          }
        }
      }
    },
    {
      "name": "product_description",
      "description": "Obtiene la descripción de un producto",
      "inputSchema": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "description": "ID del producto"
          }
        }
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@lumile/mercadolibre-mcp/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "clientId",
          "clientSecret",
          "siteId"
        ],
        "properties": {
          "siteId": {
            "type": "string",
            "description": "MercadoLibre Site ID (e.g., MLA, MLB, MCO, MEX, MLU, MLC)."
          },
          "clientId": {
            "type": "string",
            "description": "MercadoLibre Client ID."
          },
          "clientSecret": {
            "type": "string",
            "description": "MercadoLibre Client Secret."
          }
        }
      }
    }
  ]
}