{
  "qualifiedName": "@genm/switchbot-mcp",
  "displayName": "SwitchBot Server",
  "description": "Control SwitchBot devices with your AI assistant.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [
    {
      "name": "list_devices",
      "description": "デバイス一覧を取得します",
      "inputSchema": {
        "type": "object",
        "required": [],
        "properties": {}
      }
    },
    {
      "name": "get_device_status",
      "description": "デバイスのステータスを取得します",
      "inputSchema": {
        "type": "object",
        "required": [
          "deviceId"
        ],
        "properties": {
          "deviceId": {
            "type": "string",
            "description": "デバイスID"
          }
        }
      }
    },
    {
      "name": "control_device",
      "description": "デバイスを制御します",
      "inputSchema": {
        "type": "object",
        "required": [
          "deviceId",
          "command"
        ],
        "properties": {
          "command": {
            "enum": [
              "turnOn",
              "turnOff"
            ],
            "type": "string",
            "description": "コマンド（turnOn, turnOff）"
          },
          "deviceId": {
            "type": "string",
            "description": "デバイスID"
          }
        }
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@genm/switchbot-mcp/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "switchbotToken",
          "switchbotSecret"
        ],
        "properties": {
          "switchbotToken": {
            "type": "string",
            "description": "The API token for accessing SwitchBot services."
          },
          "switchbotSecret": {
            "type": "string",
            "description": "The API secret for accessing SwitchBot services."
          }
        }
      }
    }
  ]
}