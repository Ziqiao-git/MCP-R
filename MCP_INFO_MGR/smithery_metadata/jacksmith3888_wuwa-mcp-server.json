{
  "qualifiedName": "@jacksmith3888/wuwa-mcp-server",
  "displayName": "鸣潮 MCP Server",
  "description": "一个提供查询鸣潮角色信息、配队、声骸、背景故事及攻略的MCP server\n数据来自库街区",
  "iconUrl": "https://spjawbfpwezjfmicopsl.supabase.co/storage/v1/object/public/server-icons/caf5e02a-d2a4-471f-9b8e-216579df5ec4.png",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@jacksmith3888/wuwa-mcp-server",
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "get_artifact_info",
      "description": "获取库街区上的声骸详细信息并以 Markdown 格式返回。\n\n        Args:\n            artifact_name: 要查询的声骸套装的中文名称。\n\n        Returns:\n            包含声骸信息的 Markdown 字符串，\n            或者在找不到声骸或获取数据失败时返回错误消息。\n        ",
      "inputSchema": {
        "type": "object",
        "title": "get_artifact_infoArguments",
        "required": [
          "artifact_name"
        ],
        "properties": {
          "artifact_name": {
            "type": "string",
            "title": "Artifact Name"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "title": "get_artifact_infoOutput",
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "string",
            "title": "Result"
          }
        }
      }
    },
    {
      "name": "get_character_info",
      "description": "获取库街区上的角色详细信息包括角色技能，养成攻略等，并以 Markdown 格式返回。\n\n        Args:\n            character_name: 要查询的角色的中文名称。\n\n        Returns:\n            包含角色信息的 Markdown 字符串，\n            或者在找不到角色或获取数据失败时返回错误消息。\n        ",
      "inputSchema": {
        "type": "object",
        "title": "get_character_infoArguments",
        "required": [
          "character_name"
        ],
        "properties": {
          "character_name": {
            "type": "string",
            "title": "Character Name"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "title": "get_character_infoOutput",
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "string",
            "title": "Result"
          }
        }
      }
    },
    {
      "name": "get_character_profile",
      "description": "获取库街区上的角色档案信息并以 Markdown 格式返回。\n\n        Args:\n            character_name: 要查询的角色的中文名称。\n\n        Returns:\n            包含角色档案信息的 Markdown 字符串，\n            或者在找不到角色或获取数据失败时返回错误消息。\n        ",
      "inputSchema": {
        "type": "object",
        "title": "get_character_profileArguments",
        "required": [
          "character_name"
        ],
        "properties": {
          "character_name": {
            "type": "string",
            "title": "Character Name"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "title": "get_character_profileOutput",
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "string",
            "title": "Result"
          }
        }
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@jacksmith3888/wuwa-mcp-server/mcp",
      "configSchema": {}
    }
  ]
}