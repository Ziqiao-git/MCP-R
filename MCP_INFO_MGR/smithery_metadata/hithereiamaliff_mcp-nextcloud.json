    {
      "name": "nextcloud_webdav_search_files",
      "description": "Search for files across Nextcloud using unified search - supports filename, content, and metadata search",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "limit": {
            "type": "number",
            "default": 50,
            "description": "Maximum number of results to return"
          },
          "query": {
            "type": "string",
            "description": "Search terms (supports multiple words, e.g., \"budget report 2024\")"
          },
          "basePath": {
            "type": "string",
            "default": "/",
            "description": "Limit search to specific directory (e.g., \"/Documents\", \"/Projects\")"
          },
          "maxDepth": {
            "type": "number",
            "default": 3,
            "description": "Maximum directory depth to search (1-10, default: 3)"
          },
          "searchIn": {
            "type": "array",
            "items": {
              "enum": [
                "filename",
                "content",
                "metadata"
              ],
              "type": "string"
            },
            "default": [
              "filename",
              "content"
            ],
            "description": "What to search in: filename, content, and/or metadata"
          },
          "dateRange": {
            "type": "object",
            "properties": {
              "to": {
                "type": "string",
                "description": "End date (ISO format: YYYY-MM-DD)"
              },
              "from": {
                "type": "string",
                "description": "Start date (ISO format: YYYY-MM-DD)"
              }
            },
            "description": "Filter by last modified date range",
            "additionalProperties": false
          },
          "fileTypes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Filter by file extensions (e.g., [\"pdf\", \"txt\", \"md\", \"js\"])"
          },
          "sizeRange": {
            "type": "object",
            "properties": {
              "max": {
                "type": "number",
                "description": "Maximum file size in bytes"
              },
              "min": {
                "type": "number",
                "description": "Minimum file size in bytes"
              }
            },
            "description": "Filter by file size range",
            "additionalProperties": false
          },
          "quickSearch": {
            "type": "boolean",
            "default": true,
            "description": "Use quick search mode (faster, limited depth) for root directory searches"
          },
          "caseSensitive": {
            "type": "boolean",
            "default": false,
            "description": "Whether search should be case sensitive"
          },
          "includeContent": {
            "type": "boolean",
            "default": false,
            "description": "Include content preview in results (for text files)"
          }
        },
        "additionalProperties": false
      }
