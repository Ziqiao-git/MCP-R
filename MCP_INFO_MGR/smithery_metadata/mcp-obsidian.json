{
  "qualifiedName": "mcp-obsidian",
  "displayName": "Obsidian Reader",
  "description": "Read and search within a directory of Markdown notes in an Obsidian vault.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/obsidian.md.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [],
  "connections": [
    {
      "type": "stdio",
      "stdioFunction": "config => ({ command: 'npx', args: ['-y', 'mcp-obsidian', config.vaultPath] })",
      "configSchema": {
        "type": "object",
        "required": [
          "vaultPath"
        ],
        "properties": {
          "vaultPath": {
            "type": "string",
            "description": "The path to your Obsidian vault."
          }
        }
      }
    }
  ]
}