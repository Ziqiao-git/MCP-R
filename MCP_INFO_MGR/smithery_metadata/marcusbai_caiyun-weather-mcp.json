{
  "qualifiedName": "@marcusbai/caiyun-weather-mcp",
  "displayName": "彩云天气",
  "description": "查询实时天气数据、降水预报和天气预警信息。获取准确的天气信息，帮助您做出更好的出行和活动决策。支持多种语言和单位制选择，满足不同用户的需求。",
  "iconUrl": "https://icons.duckduckgo.com/ip3/dashboard.caiyunapp.com.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "get_weather_by_location",
      "description": "根据经纬度获取天气信息",
      "inputSchema": {
        "type": "object",
        "required": [
          "longitude",
          "latitude"
        ],
        "properties": {
          "unit": {
            "enum": [
              "metric",
              "imperial"
            ],
            "type": "string",
            "default": "metric",
            "description": "单位制 (metric: 公制, imperial: 英制)"
          },
          "language": {
            "enum": [
              "zh_CN",
              "en_US"
            ],
            "type": "string",
            "default": "zh_CN",
            "description": "语言"
          },
          "latitude": {
            "type": "number",
            "description": "纬度"
          },
          "longitude": {
            "type": "number",
            "description": "经度"
          },
          "daily_steps": {
            "type": "number",
            "default": 5,
            "maximum": 15,
            "minimum": 1,
            "description": "每日预报天数 (1-15)"
          },
          "hourly_steps": {
            "type": "number",
            "default": 24,
            "maximum": 360,
            "minimum": 1,
            "description": "小时预报数量 (1-360)"
          }
        }
      }
    },
    {
      "name": "get_weather_by_address",
