{
  "qualifiedName": "@JustaName-id/ens-mcp-server",
  "displayName": "ENS MCP Server",
  "description": "Interact with the Ethereum Name Service to resolve names, check availability, and retrieve records. Simplify your blockchain interactions by leveraging ENS functionalities directly within your applications.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/www.npmjs.com.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [
    {
      "name": "resolve-name",
      "description": "Resolve an ENS name to an Ethereum address",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to resolve (e.g., 'vitalik.eth')"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "reverse-lookup",
      "description": "Get the ENS name for an Ethereum address",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string",
            "description": "The Ethereum address to look up"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-text-record",
      "description": "Get a text record for an ENS name",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name",
          "key"
        ],
        "properties": {
          "key": {
            "type": "string",
            "description": "The record key to look up (e.g., 'email', 'url', 'avatar', 'description', 'twitter', etc.)"
          },
          "name": {
            "type": "string",
            "description": "The ENS name to query"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "check-availability",
      "description": "Check if an ENS name is available for registration",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to check (without .eth suffix)"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-all-records",
      "description": "Get all available information for an ENS name",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to query"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-subdomains",
      "description": "Get subdomains for an ENS name",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to query for subdomains"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-name-history",
      "description": "Get the history of an ENS name",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to check history for"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-registration-price",
      "description": "Get the price to register an ENS name",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The ENS name to check price for (without .eth suffix)"
          },
          "duration": {
            "type": "integer",
            "default": 1,
            "minimum": 1,
            "description": "Registration duration in years"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@JustaName-id/ens-mcp-server/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [],
        "properties": {
          "rpcProviderUrl": {
            "type": "string",
            "description": "A mainnet RPC Provider"
          }
        }
      }
    }
  ]
}