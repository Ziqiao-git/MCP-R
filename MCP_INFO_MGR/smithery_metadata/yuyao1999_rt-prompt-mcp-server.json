{
  "qualifiedName": "@yuyao1999/rt-prompt-mcp-server",
  "displayName": "RT-Prompt",
  "description": "Provide specialized prompt engineering suggestions to enhance LLM-generated content for development and design tasks. Support backend, frontend, UI design, and general scenarios with tailored prompt completions. Easily integrate with MCP-compatible clients to improve prompt quality and relevance.",
  "iconUrl": null,
  "remote": false,
  "deploymentUrl": null,
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "get_backend_suggestions",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "context": {
            "type": "string",
            "description": "当前上下文或任务描述"
          },
          "language": {
            "type": "string",
            "description": "编程语言，如Java、Python等"
          },
          "databaseType": {
            "type": "string",
            "description": "数据库类型，如MySQL、PostgreSQL等"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_frontend_suggestions",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "context": {
            "type": "string",
            "description": "当前上下文或任务描述"
          },
          "framework": {
            "type": "string",
            "description": "前端框架，如React、Vue等"
          },
          "deviceType": {
            "type": "string",
            "description": "设备类型，如移动端、桌面端等"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_general_suggestions",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "context": {
            "type": "string",
            "description": "当前上下文或任务描述"
          },
          "taskType": {
            "type": "string",
            "description": "任务类型，如代码生成、文档生成等"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_ui_design_suggestions",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "context": {
            "type": "string",
            "description": "当前上下文或任务描述"
          },
          "platform": {
            "type": "string",
            "description": "平台类型，如Web、iOS、Android等"
          },
          "designType": {
            "type": "string",
            "description": "设计类型，如线框图、高保真原型图等"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_rt_crud_suggestions",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "base_path": {
            "type": "string",
            "description": "可选的 Java/Kotlin 根包路径，例如 'com.example.myapp' 或 'cn.teamy'。如果提供，将替换提示中默认的 'cn.teamy'。请使用点分隔。"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_feishu_prompt",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "prompt_name"
        ],
        "properties": {
          "prompt_name": {
            "type": "string",
            "description": "提示词名称，如'UI转化提示词'、'AI生成UI-3D风格'等"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@yuyao1999/rt-prompt-mcp-server/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [],
        "properties": {}
      }
    }
  ]
}