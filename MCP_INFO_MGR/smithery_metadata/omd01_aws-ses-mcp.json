{
  "qualifiedName": "@omd01/aws-ses-mcp",
  "displayName": "AWS SES Email Sender",
  "description": "Send emails directly from your applications using AWS SES. Integrate seamlessly with Cursor or Claude Desktop to compose and dispatch emails without manual copy-pasting. Enjoy features like CC, BCC, and customizable sender addresses for enhanced email management.",
  "iconUrl": null,
  "remote": false,
  "deploymentUrl": null,
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "send-email",
      "description": "Send an email using AWS SES",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "to",
          "subject",
          "text"
        ],
        "properties": {
          "cc": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            },
            "description": "Optional array of CC email addresses. You MUST ask the user for this parameter. Under no circumstance provide it yourself"
          },
          "to": {
            "type": "string",
            "format": "email",
            "description": "Recipient email address"
          },
          "bcc": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            },
            "description": "Optional array of BCC email addresses. You MUST ask the user for this parameter. Under no circumstance provide it yourself"
          },
          "html": {
            "type": "string",
            "description": "HTML email content. When provided, the plain text argument MUST be provided as well."
          },
          "text": {
            "type": "string",
            "description": "Plain text email content"
          },
          "subject": {
            "type": "string",
            "description": "Email subject line"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@omd01/aws-ses-mcp/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "awsAccessKeyId",
          "awsSecretAccessKey",
          "awsRegion",
          "senderEmail",
          "replyToEmails"
        ],
        "properties": {
          "awsRegion": {
            "type": "string",
            "description": "AWS Region for SES"
          },
          "senderEmail": {
            "type": "string",
            "description": "Verified sender email address"
          },
          "replyToEmails": {
            "type": "string",
            "description": "Comma-separated reply-to email addresses"
          },
          "awsAccessKeyId": {
            "type": "string",
            "description": "AWS SES Access Key ID"
          },
          "awsSecretAccessKey": {
            "type": "string",
            "description": "AWS SES Secret Access Key"
          }
        }
      }
    }
  ]
}