{
  "qualifiedName": "@hostedmcp/multitool",
  "displayName": "Hosted MCP",
  "description": "Provide a hosted environment for Model Context Protocol applications.",
  "iconUrl": null,
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [
    {
      "name": "deep-research",
      "description": "Performs deep research about a topic using Perplexity AI",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "The research query or topic to investigate"
          },
          "maxTokens": {
            "type": "string",
            "description": "Maximum number of tokens in the response (default: 1000)"
          },
          "temperature": {
            "type": "string",
            "description": "Controls randomness in the response, between 0.0 and 1.0 (default: 0.2)"
          },
          "search_recency_filter": {
            "type": "string",
            "description": "Filter results by recency"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "simple-search",
      "description": "Runs 1 search query using Exa search engine",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query to execute"
          },
          "numResults": {
            "type": "number",
            "description": "Number of results to return (default: 10)"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@hostedmcp/multitool/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "API_KEY",
          "URL"
        ],
        "properties": {
          "URL": {
            "type": "string",
            "description": "URL of the HostedMCP server"
          },
          "API_KEY": {
            "type": "string",
            "description": "API key for authentication with the HostedMCP server"
          }
        }
      }
    }
  ]
}