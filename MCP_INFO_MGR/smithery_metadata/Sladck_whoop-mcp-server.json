        "additionalProperties": false
      }
    },
    {
      "name": "get_whoop_sleep",
      "description": "Get WHOOP sleep data with optional date range and limit",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "limit": {
            "type": "number",
            "default": 5,
            "maximum": 50,
            "minimum": 1,
            "description": "Number of sleep records to return (1-50)"
          },
          "end_date": {
            "type": "string",
            "description": "End date in YYYY-MM-DD format"
          },
          "start_date": {
            "type": "string",
            "description": "Start date in YYYY-MM-DD format"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_whoop_cycles",
      "description": "Get WHOOP physiological cycle data (daily summaries) with optional date range and limit",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
