          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "clear_whoop_cache",
      "description": "Clear all cached WHOOP data to force fresh API calls",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@Sladck/whoop-mcp-server/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "required": [
          "accessToken"
        ],
        "properties": {
          "baseUrl": {
            "type": "string",
            "format": "uri",
            "default": "https://api.prod.whoop.com/developer/v1",
            "description": "WHOOP API base URL"
          },
          "accessToken": {
            "type": "string",
            "minLength": 1,
            "description": "Your WHOOP API access token from OAuth authorization"
          },
          "cacheTimeout": {
            "type": "number",
            "default": 300,
            "maximum": 3600,
            "minimum": 60,
            "description": "How long to cache API responses (seconds)"
          },
          "refreshToken": {
            "type": "string",
            "description": "Your WHOOP API refresh token for automatic renewal"
          },
          "rateLimitPerMinute": {
            "type": "number",
            "default": 100,
            "maximum": 1000,
            "minimum": 10,
            "description": "Maximum API requests per minute"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}