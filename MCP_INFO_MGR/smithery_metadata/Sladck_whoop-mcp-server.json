{
  "qualifiedName": "@Sladck/whoop-mcp-server",
  "displayName": "WHOOP",
  "description": "Get fast answers about your workouts, recovery, sleep, and daily cycles from your WHOOP data. Explore trends and compare time ranges to surface insights like HRV, strain, and sleep performance. Keep your data private and under your control.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@Sladck/whoop-mcp-server",
  "security": null,
  "tools": [
    {
      "name": "get_whoop_auth_status",
      "description": "Get WHOOP authentication status and connection info",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "get_whoop_profile",
      "description": "Get WHOOP user profile information including name and basic details",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "get_whoop_workouts",
      "description": "Get WHOOP workout data with optional date range and limit",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "limit": {
            "type": "number",
            "default": 5,
            "maximum": 50,
            "minimum": 1,
            "description": "Number of workouts to return (1-50)"
          },
          "end_date": {
            "type": "string",
            "description": "End date in YYYY-MM-DD format"
          },
          "start_date": {
            "type": "string",
            "description": "Start date in YYYY-MM-DD format"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_whoop_recovery",
