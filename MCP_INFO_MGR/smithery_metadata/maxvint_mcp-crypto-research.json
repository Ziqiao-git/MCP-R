{
  "qualifiedName": "@maxvint/mcp-crypto-research",
  "displayName": "Crypto Research Server",
  "description": "Provide a specialized MCP server that enables integration with cryptocurrency research data and tools. Facilitate access to crypto-related resources and operations to enhance LLM applications with up-to-date blockchain and crypto insights. Empower users to leverage crypto data seamlessly within their AI workflows.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@maxvint/mcp-crypto-research",
  "security": null,
  "tools": [
    {
      "name": "research_get_projects",
      "description": "Search for projects on Research knowledge base.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "research_get_project_by_twitter",
      "description": "Get project details by Twitter username on Research knowledge base.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "username"
        ],
        "properties": {
          "username": {
            "type": "string",
            "description": "Twitter username of the project"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "research_get_project_reports_by_twitter",
      "description": "Get project reports by Twitter username on Research knowledge base.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "username"
        ],
        "properties": {
          "username": {
            "type": "string",
            "description": "Twitter username of the project"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "research_search_reports",
      "description": "Search for reports on Research knowledge base.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "keyword"
        ],
        "properties": {
          "day": {
            "type": "string",
            "default": "today",
            "description": "Day of results (default today)"
          },
          "keyword": {
            "type": "string",
            "description": "Keyword to search for reports"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "research_search_news",
      "description": "Search for news on Research knowledge base.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "day": {
            "type": "string",
            "default": "today",
            "description": "Day of results (default today), format: YYYY-MM-DD"
          },
          "level": {
            "type": "number",
            "default": 1,
            "description": "News level (default 3), 1: All, 2: Important, 3: Critical"
          },
          "limit": {
            "type": "number",
            "default": 100,
            "description": "Limit of results (default 100, max 100)"
          },
          "offset": {
            "type": "number",
            "default": 0,
            "description": "Offset of results (default 0)"
          },
          "source": {
            "type": "string",
            "description": "Source to search for news"
          },
          "endDate": {
            "type": "string",
            "description": "End date of results (default today), format: YYYY-MM-DD"
          },
          "keyword": {
            "type": "string",
            "description": "Keyword to search for news"
          },
          "category": {
            "type": "string",
            "description": "Category to search for news, support: [\"Macro\",\"巨鲸动向\",\"相关项目\",\"NFT & GameFi & SocialFi & DID & DAO & 内容创作\",\"交易所/钱包\",\"公链/L2\",\"投融资\",\"监管\",\"安全\",\"AI相关\",\"其他\",\"工具\",\"观点\"]"
          },
          "startDate": {
            "type": "string",
            "description": "Start date of results (default today), format: YYYY-MM-DD"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@maxvint/mcp-crypto-research/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "properties": {},
        "description": "Schema for the /mcp endpoint configuration",
        "x-mcp-version": "1.0",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}