{
  "qualifiedName": "@Trashwbin/streamable-demo",
  "displayName": "Streamable Demo",
  "description": "Manage and summarize text notes efficiently using a simple MCP server. Create new notes with ease and generate comprehensive summaries of all stored notes. Access and manipulate notes through intuitive URIs and tools designed for seamless integration.",
  "iconUrl": null,
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@Trashwbin/streamable-demo",
  "security": null,
  "tools": [
    {
      "name": "greet",
      "description": "一个简单的问候工具",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "要问候的名字"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "multi-greet",
      "description": "一个工具，发送不同的问候，并在它们之间有延迟",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "要问候的名字"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "start-notification-stream",
      "description": "开始发送周期性通知以测试恢复",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "count": {
            "type": "number",
            "default": 50,
            "description": "要发送的通知数量（0 表示 100）"
          },
          "interval": {
            "type": "number",
            "default": 100,
            "description": "通知之间的间隔（毫秒）"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@Trashwbin/streamable-demo/mcp",
      "configSchema": {
        "type": "object",
        "required": [],
        "properties": {}
      }
    }
  ]
}