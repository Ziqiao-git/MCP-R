{
  "qualifiedName": "mcp-server-duckdb",
  "displayName": "DuckDB Server",
  "description": "A DuckDB MCP server allowing interaction with DuckDB databases through MCP.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [],
  "connections": [
    {
      "type": "stdio",
      "stdioFunction": "config=>({command:'uvx',args:['mcp-server-duckdb','--db-path',config.dbPath,config.readonly?'--readonly':undefined].filter(Boolean)})",
      "configSchema": {
        "type": "object",
        "required": [
          "dbPath"
        ],
        "properties": {
          "dbPath": {
            "type": "string",
            "description": "Path to the DuckDB database file."
          },
          "readonly": {
            "type": "boolean",
            "description": "Run server in read-only mode."
          }
        }
      }
    }
  ]
}