          "query": {
            "type": "string",
            "description": "Search query for papers"
          },
          "sortBy": {
            "enum": [
              "relevance",
              "citationCount",
              "year"
            ],
            "type": "string",
            "default": "relevance",
            "description": "Field to sort by"
          },
          "yearEnd": {
            "type": "number",
            "description": "Ending year for filtering (inclusive)"
          },
          "sortOrder": {
            "enum": [
              "asc",
              "desc"
            ],
            "type": "string",
            "default": "desc",
            "description": "Sort order"
          },
          "yearStart": {
            "type": "number",
            "description": "Starting year for filtering (inclusive)"
          },
          "minCitations": {
            "type": "number",
            "description": "Minimum number of citations"
          },
          "fieldsOfStudy": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Fields of study to filter by"
          },
          "openAccessOnly": {
            "type": "boolean",
            "description": "Only include open access papers"
          },
          "publicationTypes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Publication types to filter by"
          }
        },
        "additionalProperties": false
