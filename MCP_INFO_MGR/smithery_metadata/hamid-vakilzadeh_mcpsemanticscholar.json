{
  "qualifiedName": "@hamid-vakilzadeh/mcpsemanticscholar",
  "displayName": "AI Research Assistant",
  "description": "The server provides immediate access to millions of academic papers through Semantic Scholar and arXiv, enabling AI-powered research with comprehensive search, citation analysis, and full-text PDF extraction from multiple sources (arXiv and Wiley open-access).\n\n - No API key is required.\n - The API allows up to 100 requests per 5 minutes. To access a higher rate limit, visit\n  https://www.semanticscholar.org/product/api#Partner-Form to request authentication for your project.",
  "iconUrl": "https://spjawbfpwezjfmicopsl.supabase.co/storage/v1/object/public/server-icons/833927f5-3448-4e3d-abc5-1353d6d3ee2c.png",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@hamid-vakilzadeh/mcpsemanticscholar",
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "papers-search-basic",
      "title": "Basic papers search",
      "description": "Search for academic papers with a simple query.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "limit": {
            "type": "number",
            "default": 10,
            "description": "Maximum number of results to return"
          },
          "query": {
            "type": "string",
            "description": "Search query for papers"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "paper-search-advanced",
      "title": "Advanced paper search",
      "description": "Search for academic papers with advanced filtering options",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "limit": {
            "type": "number",
            "default": 10,
            "description": "Maximum number of results to return"
