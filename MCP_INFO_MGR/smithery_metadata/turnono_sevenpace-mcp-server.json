      "inputSchema": {
        "type": "object",
        "required": [],
        "properties": {
          "endDate": {
            "type": "string",
            "description": "End date in YYYY-MM-DD format (optional)"
          },
          "startDate": {
            "type": "string",
            "description": "Start date in YYYY-MM-DD format (optional)"
          },
          "workItemId": {
            "type": "number",
            "description": "Filter by specific work item ID (optional)"
          }
        }
      }
    },
    {
      "name": "update_worklog",
      "description": "Update an existing time log entry",
      "inputSchema": {
        "type": "object",
        "required": [
          "worklogId"
        ],
        "properties": {
          "hours": {
            "type": "number",
            "description": "New number of hours (optional)"
          },
          "worklogId": {
            "type": "string",
            "description": "ID of the worklog to update"
          },
          "workItemId": {
            "type": "number",
            "description": "New work item ID (optional)"
          },
          "description": {
            "type": "string",
            "description": "New description (optional)"
          }
        }
      }
    },
    {
      "name": "delete_worklog",
      "description": "Delete a time log entry",
      "inputSchema": {
        "type": "object",
        "required": [
          "worklogId"
        ],
        "properties": {
          "worklogId": {
            "type": "string",
            "description": "ID of the worklog to delete"
          }
        }
      }
    },
    {
      "name": "generate_time_report",
      "description": "Generate time tracking report for a date range",
      "inputSchema": {
        "type": "object",
        "required": [
          "startDate",
          "endDate"
        ],
        "properties": {
          "userId": {
            "type": "string",
