{
  "qualifiedName": "@puremd/puremd-mcp",
  "displayName": "pure.md MCP server",
  "description": "Access web content in markdown format reliably and efficiently. Unblock web pages and search the web seamlessly, enhancing your agents' capabilities. Integrate with your scripts and applications to leverage markdown delivery like a CDN.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/pure.md.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "unblock-url",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "search-web",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@puremd/puremd-mcp/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "puremdApiKey"
        ],
        "properties": {
          "puremdApiKey": {
            "type": "string",
            "description": "API key for authenticating with pure.md"
          }
        }
      }
    }
  ]
}