          "company_number"
        ],
        "properties": {
          "firm": {
            "type": "string",
            "format": "uuid",
            "description": "ID du cabinet"
          },
          "turnover": {
            "type": "number",
            "description": "Chiffre d'affaires"
          },
          "bypass_RBE": {
            "type": "boolean",
            "description": "Contourner RBE"
          },
          "supervisor": {
            "type": "string",
