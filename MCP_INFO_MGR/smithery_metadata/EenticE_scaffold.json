{
  "qualifiedName": "@EenticE/scaffold",
  "displayName": "Smithery Scaffold",
  "description": "Provide a flexible scaffold for building MCP servers with ease. Accelerate development by leveraging a ready-to-use framework that integrates MCP SDK and schema validation. Simplify creating and managing MCP tools, resources, and prompts in your applications.",
  "iconUrl": null,
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@EenticE/scaffold",
  "security": null,
  "tools": [
    {
      "name": "hello",
      "description": "Say hello to someone",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name to greet"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@EenticE/scaffold/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "properties": {
          "debug": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug logging"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-mcp-version": "1.0",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}