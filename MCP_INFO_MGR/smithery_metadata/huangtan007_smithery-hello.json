{
  "qualifiedName": "@huangtan007/smithery-hello",
  "displayName": "smithery-hello",
  "description": "Provide a demo implementation of an MCP server showcasing basic MCP features. Enable integration with LLMs by exposing simple tools and resources for testing and development purposes. Facilitate understanding and experimentation with the Model Context Protocol.",
  "iconUrl": null,
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@huangtan007/smithery-hello",
  "security": null,
  "tools": [
    {
      "name": "hello",
      "description": "Say hello to someone",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name to greet"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@huangtan007/smithery-hello/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "properties": {
          "debug": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug logging"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-mcp-version": "1.0",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}