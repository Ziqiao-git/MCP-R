{
  "qualifiedName": "@smithery-ai/git",
  "displayName": "Git",
  "description": "A Model Context Protocol server for Git repository interaction and automation.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/git-scm.com.ico",
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [],
  "connections": [
    {
      "type": "stdio",
      "stdioFunction": "config => ({command: 'uvx', args: ['mcp-server-git', '--repository', config.repository]})",
      "configSchema": {
        "type": "object",
        "required": [
          "repository"
        ],
        "properties": {
          "repository": {
            "type": "string",
            "description": "The path to the Git repository."
          }
        }
      }
    }
  ]
}