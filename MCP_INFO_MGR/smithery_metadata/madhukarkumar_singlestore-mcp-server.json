{
  "qualifiedName": "@madhukarkumar/singlestore-mcp-server",
  "displayName": "SingleStore MCP Server",
  "description": "Interact with SingleStore databases using a standardized protocol. Execute queries, describe schemas, and generate ER diagrams effortlessly.",
  "iconUrl": null,
  "remote": false,
  "deploymentUrl": null,
  "security": null,
  "tools": [
    {
      "name": "generate_er_diagram",
      "description": "Generate a Mermaid ER diagram of the database schema",
      "inputSchema": {
        "type": "object",
        "required": [],
        "properties": {}
      }
    },
    {
      "name": "list_tables",
      "description": "List all tables in the database",
      "inputSchema": {
        "type": "object",
        "required": [],
        "properties": {}
      }
    },
    {
      "name": "query_table",
      "description": "Execute a query on a table",
      "inputSchema": {
        "type": "object",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "SQL query to execute"
          }
        }
      }
    },
    {
      "name": "describe_table",
      "description": "Get detailed information about a table",
      "inputSchema": {
        "type": "object",
        "required": [
          "table"
        ],
        "properties": {
          "table": {
            "type": "string",
            "description": "Name of the table to describe"
          }
        }
      }
    },
    {
      "name": "run_read_query",
      "description": "Execute a read-only (SELECT) query on the database",
      "inputSchema": {
        "type": "object",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "SQL SELECT query to execute"
          }
        }
      }
    },
    {
      "name": "create_table",
      "description": "Create a new table in the database with specified columns and constraints",
      "inputSchema": {
        "type": "object",
        "required": [
          "table_name",
          "columns"
        ],
        "properties": {
          "columns": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Column name"
                },
                "type": {
                  "type": "string",
                  "description": "Data type (e.g., INT, VARCHAR(255), etc.)"
                },
                "default": {
                  "type": "string",
                  "description": "Default value for the column"
                },
                "nullable": {
                  "type": "boolean",
                  "description": "Whether the column can be NULL"
                },
                "auto_increment": {
                  "type": "boolean",
                  "description": "Whether the column should auto increment"
                }
              }
            },
            "description": "List of columns to create"
          },
          "table_name": {
            "type": "string",
            "description": "Name of the table to create"
          },
          "table_options": {
            "type": "object",
            "properties": {
              "sort_key": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Columns to use as sort key"
              },
              "shard_key": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Columns to use as shard key"
              },
              "compression": {
                "enum": [
                  "SPARSE"
                ],
                "type": "string",
                "description": "Table compression type"
              },
              "is_reference": {
                "type": "boolean",
                "description": "Whether this is a reference table"
              },
              "auto_increment_start": {
                "type": "number",
                "description": "Starting value for auto increment columns"
              }
            }
          }
        }
      }
    },
    {
      "name": "generate_synthetic_data",
      "description": "Generate and insert synthetic data into an existing table",
      "inputSchema": {
        "type": "object",
        "required": [
          "table"
        ],
        "properties": {
          "count": {
            "type": "number",
            "default": 100,
            "description": "Number of rows to generate and insert"
          },
          "table": {
            "type": "string",
            "description": "Name of the table to insert data into"
          },
          "batch_size": {
            "type": "number",
            "default": 1000,
            "description": "Number of rows to insert in each batch"
          },
          "column_generators": {
            "type": "object",
            "description": "Custom generators for specific columns (optional)",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "end": {
                  "type": "number",
                  "description": "Ending value for random number generator"
                },
                "type": {
                  "enum": [
                    "sequence",
                    "random",
                    "values",
                    "formula"
                  ],
                  "type": "string",
                  "description": "Type of generator to use"
                },
                "start": {
                  "type": "number",
                  "description": "Starting value for sequence generator"
                },
                "values": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Array of values to choose from for values generator"
                },
                "formula": {
                  "type": "string",
                  "description": "SQL expression for formula generator"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "optimize_sql",
      "description": "Analyze a SQL query using PROFILE and provide optimization recommendations",
      "inputSchema": {
        "type": "object",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "SQL query to analyze and optimize"
          }
        }
      }
    }
  ],
  "connections": [
    {
      "type": "stdio",
      "bundleUrl": "https://backend.smithery.ai/storage/v1/object/public/bundles/@madhukarkumar/singlestore-mcp-server/server.mcpb",
      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [
          "singlestoreHost",
          "singlestorePort",
          "singlestoreUser",
          "singlestorePassword",
          "singlestoreDatabase"
        ],
        "properties": {
          "singlestoreHost": {
            "type": "string",
            "description": "The hostname of the SingleStore instance."
          },
          "singlestorePort": {
            "type": "number",
            "description": "The port number to connect to SingleStore, usually 3306."
          },
          "singlestoreUser": {
            "type": "string",
            "description": "The username for SingleStore authentication."
          },
          "singlestoreDatabase": {
            "type": "string",
            "description": "The name of the SingleStore database to connect to."
          },
          "singlestorePassword": {
            "type": "string",
            "description": "The password for SingleStore authentication."
          }
        }
      }
    }
  ]
}