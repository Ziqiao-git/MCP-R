{
  "qualifiedName": "@mochow13/ticketmaster-mcp-server",
  "displayName": "Ticketmaster MCP Server",
  "description": "Enable seamless integration of Ticketmaster data and services into your applications. Access event information, ticket availability, and venue details through standardized MCP tools and resources. Enhance your user experience by leveraging real-time ticketing context and actions.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/developer.ticketmaster.com.ico",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@mochow13/ticketmaster-mcp-server",
  "security": null,
  "tools": [
    {
      "name": "search_ticketmaster",
      "description": "Search for events, venues, or attractions on Ticketmaster",
      "inputSchema": {
        "type": "object",
        "required": [
          "apiKey",
          "type"
        ],
        "properties": {
          "city": {
            "type": "string",
            "description": "City name"
          },
          "type": {
            "enum": [
              "event",
              "venue",
              "attraction"
            ],
            "type": "string",
            "description": "Type of search to perform"
          },
          "apiKey": {
            "type": "string",
            "description": "TicketMaster API key for authentication"
          },
          "endDate": {
            "type": "string",
            "description": "End date in YYYY-MM-DD format"
          },
          "keyword": {
            "type": "string",
            "description": "Search keyword or search term"
          },
          "venueId": {
            "type": "string",
            "description": "Specific venue ID to search"
          },
          "startDate": {
            "type": "string",
            "description": "Start date in YYYY-MM-DD format"
          },
          "stateCode": {
            "type": "string",
            "description": "State code (e.g., NY, CA)"
          },
          "countryCode": {
            "type": "string",
            "description": "Country code (e.g., US, CA)"
          },
          "attractionId": {
            "type": "string",
            "description": "Specific attraction ID to search"
          },
          "classificationName": {
            "type": "string",
            "description": "Event classification/category (e.g., \"Sports\", \"Music\")"
          }
        }
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@mochow13/ticketmaster-mcp-server/mcp",
      "configSchema": {}
    }
  ]
}