        "type": "object",
        "required": [
          "context_id"
        ],
        "properties": {
          "criteria": {
            "type": "object",
            "properties": {
              "edge_types": {
                "type": "array",
                "items": {
                  "enum": [
                    "correlative",
                    "supportive",
                    "contradictory",
                    "prerequisite",
                    "causal",
                    "temporal_precedence"
                  ],
                  "type": "string"
                }
              },
              "node_types": {
                "type": "array",
                "items": {
                  "enum": [
                    "root",
                    "dimension",
                    "hypothesis",
                    "evidence",
                    "placeholder_gap",
                    "interdisciplinary_bridge_node"
                  ],
                  "type": "string"
                }
              },
              "impact_threshold": {
                "type": "number",
                "maximum": 1,
                "minimum": 0
              },
              "confidence_threshold": {
                "type": "number",
                "maximum": 1,
                "minimum": 0
              },
              "temporal_recency_days": {
                "type": "number",
                "minimum": 0
              }
            }
