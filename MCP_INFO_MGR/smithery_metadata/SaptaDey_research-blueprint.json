        "properties": {
          "context_id": {
            "type": "string",
            "description": "ID of the analysis context"
          },
          "validation_level": {
            "enum": [
              "basic",
              "comprehensive"
            ],
            "type": "string",
            "default": "basic",
            "description": "Level of validation to perform"
          }
        }
      }
    },
    {
