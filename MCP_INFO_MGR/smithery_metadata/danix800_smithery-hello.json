{
  "qualifiedName": "@danix800/smithery-hello",
  "displayName": "Hello",
  "description": "Send a friendly greeting to anyone. Personalize quick intros and acknowledgments in chats or demos. Keep conversations warm with a simple hello on demand.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@danix800/smithery-hello",
  "security": null,
  "tools": [
    {
      "name": "hello",
      "title": "Hello Tool",
      "description": "Say hello to someone",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name to greet"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@danix800/smithery-hello/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "properties": {
          "debug": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug logging"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}