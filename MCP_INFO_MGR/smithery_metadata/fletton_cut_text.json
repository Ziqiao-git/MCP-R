{
  "qualifiedName": "@fletton/cut_text",
  "displayName": "Cut Text",
  "description": "Provide a minimal MCP server scaffold to help developers quickly build and test MCP servers. Enable rapid prototyping of MCP tools and resources with a simple setup. Facilitate integration of custom MCP capabilities in your applications.",
  "iconUrl": null,
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@fletton/cut_text",
  "security": null,
  "tools": [
    {
      "name": "hello",
      "description": "Say hello to someone",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name to greet"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "cut_text",
      "description": "Cut text into chunks of up to 300 words each, with Chinese language support",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Text to cut into chunks"
          },
          "maxWords": {
            "type": "number",
            "default": 300,
            "description": "Maximum words per chunk (default: 300)"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@fletton/cut_text/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "properties": {
          "debug": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug logging"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-mcp-version": "1.0",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ]
}